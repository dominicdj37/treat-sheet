


<div class="party-list-div">
    <a> <%= link_to "Host a party", create_party_path, class:"btn btn-dark btn-block btn-colorz" %> </a>
<table class="table table-light table-hover">
  <thead class="table-dark">
    <tr>
      <th>Host</th>
      <th>Venue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @treats.each do |treat| %>
      <tr>
        <td><%= treat.by_name %></td>
        <td><%= treat.venue %></td>
        <td><%= link_to 'Show' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<div class="card my-create-card" style="width: 18rem;">
  
  <div class="card-body">
    <h5 class="card-title light-color">Do I smell a party?</h5>
    <p class="card-text light-color">Man up and take responsibilty, Pay your debts with a party!</p>
    <a> <%= link_to "Host a party", create_party_path, class:"btn btn-colorx" %> </a>
  </div>
</div>


